<div class="small-4">
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@item.errors.count, "error") %> prohibited this place from being saved:</p>

      <% @item.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>

    </div>
  <% end %>


  <div class="form-inputs">
    <%= f.label :product_id %><br>
    <%= f.collection_select :product_id, Product.all.order(:article), :id, :article %>    


    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>


    <%= f.label :place_id %><br>
    <%= f.collection_select :place_id, Place.all.order(:title), :id, :title %>


    <%= f.label :list_id %><br>
    <%= f.number_field :list_id %>
  </div>
</div>  
  <div class="form-actions small-12">
    <%= f.submit :class => 'button' %>
    <%= link_to 'Cancel and Back to List', list_path(@list_id_num), :class => "button secondary"  %>
  </div>
<% end %>
