      </div>
      <% if current_user %>
    
        <nav class="top-bar" data-topbar role="navigation">
          
            <ul class="title-area">
              <li class="name">
                <%= link_to 'Lists', root_url %>
              </li>
              <li class="name">
                <%= link_to 'Goods', products_url %>
              </li>
              <li class="name">
                <%= link_to 'Shops', places_url %>
