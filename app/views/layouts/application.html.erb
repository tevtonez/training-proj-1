                Friends
              </li>
              <li class="name">
                About
              </li>
            </ul>
        </nav>
        <div class="clear"> </div>
      <% end %>
    </div>
    <div class="clear"></div>
    <div class="main_block">
    <% if current_user %>

      

      <%= yield %>

    <% else %>
      
      <%= yield %>
      
    <% end %>
    
    </div>
    <%= javascript_include_tag "application" %>
  </div>    
