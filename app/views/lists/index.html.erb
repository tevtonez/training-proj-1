<h1>Listing lists</h1>

<table border = 0>
  <thead>
    <tr>
      <th>List name</th>
      <th>Creator/Updator</th>
      <th># of items</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  

    <% @lists.each do |list| %>
      <tr>
        <td class="list_name"><%= list.list_name %></td>
        <td class="user_email"><%= created_by_email(list.id)  %></td>
        <td><%= Item.where(list_id: list.id).count %></td>
        <td class="link_to_Show"><%= link_to 'View', list %></td>
        <td class="link_to_Edit"><%= link_to 'Edit', edit_list_path(list) %></td>
        <td class="link_to_Destroy"><%= link_to '[X]', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  
</table>

<br>

<%= link_to 'New List', new_list_path, class: "button" %>
