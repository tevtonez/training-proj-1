<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.article %></td>
        <td><%= link_to " ", edit_product_path(product), :title => "Edit Product", :class => "link_to_edit" %></td>
        <td><%= link_to " ", product, method: :delete, data: { confirm: 'Are you sure?' }, :title => "Delete Product", :class => "link_to_del" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Product', new_product_path, class: "button" %>
