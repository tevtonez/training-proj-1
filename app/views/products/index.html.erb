<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.article %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to '[X]', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

